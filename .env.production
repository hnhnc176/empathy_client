# Production Environment Variables
# IMPORTANT: Fill in these values before deployment

# API Configuration - Using Netlify Functions
VITE_API_BASE_URL=https://empathy-mental-health.netlify.app/api
VITE_SOCKET_URL=https://empathy-mental-health.netlify.app

# App Configuration
VITE_APP_NAME=Empathy
VITE_APP_ENVIRONMENT=production
VITE_NODE_ENV=production

# Feature Flags
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_HTTPS=true

# Cloudinary Configuration - Replace with your values
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name_here
VITE_CLOUDINARY_UPLOAD_PRESET=empathy_uploads

# Optional: Analytics (uncomment and fill if needed)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX
# VITE_HOTJAR_ID=your_hotjar_id

# Optional: Error Tracking (uncomment and fill if needed)  
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# VITE_SENTRY_ENVIRONMENT=production

# API Configuration
VITE_API_TIMEOUT=15000
VITE_API_RETRY_ATTEMPTS=3